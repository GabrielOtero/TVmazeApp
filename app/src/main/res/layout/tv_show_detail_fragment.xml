<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tv_show_card"
    android:layout_marginLeft="@dimen/tv_show_list_item_margin"
    android:layout_marginRight="@dimen/tv_show_list_item_margin"
    android:layout_marginBottom="@dimen/tv_show_list_item_margin"
    android:padding="@dimen/tv_show_list_item_padding">

    <ImageView
        android:id="@+id/tv_show_poster"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:adjustViewBounds="true"
        android:src="@drawable/girls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_show_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/tv_show_list_item_title_margin_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_show_poster" />

    <TextView
        android:id="@+id/tv_show_genres"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/tv_show_list_item_title_margin_start"
        android:layout_marginTop="@dimen/tv_show_list_item_title_margin_top"
        app:layout_constraintTop_toBottomOf="@id/tv_show_name"
        app:layout_constraintStart_toEndOf="@id/tv_show_poster" />

    <TextView
        android:id="@+id/tv_show_schedule"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/tv_show_list_item_title_margin_start"
        android:layout_marginTop="@dimen/tv_show_list_item_title_margin_top"
        app:layout_constraintTop_toBottomOf="@id/tv_show_genres"
        app:layout_constraintStart_toEndOf="@id/tv_show_poster" />

    <TextView
        android:id="@+id/tv_show_summary"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/tv_show_list_item_title_margin_top"
        app:layout_constraintTop_toBottomOf="@id/tv_show_poster"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>